generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Mission {
  id              String            @id @default(cuid())
  name            String
  missionId       String            @unique
  deploymentId    String
  deploymentData  Json?
  zoneId          String
  zoneData        Json?
  waypoints       Waypoint[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  AssignedMission AssignedMission[]

  @@unique([deploymentId, name])
  @@index([deploymentId])
  @@index([zoneId])
}

model Waypoint {
  id        String   @id @default(cuid())
  pointId   String
  label     String
  order     Int?
  missionId String
  mission   Mission  @relation(fields: [missionId], references: [id], onDelete: Cascade)
  tasks     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([missionId, pointId])
  @@index([missionId])
}

// New models for Scheduler feature
model Scheduler {
  id              String            @id @default(cuid())
  schedulerName   String
  schedulerId     String            @unique
  deploymentId    String
  zoneId          String
  missionIds      String[]
  schedulerOption Json
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @default(now())
  AssignedMission AssignedMission[]

  @@unique([deploymentId, schedulerName])
}

model AssignedMission {
  id          String    @id @default(cuid())
  scheduler   Scheduler @relation(fields: [schedulerId], references: [id], onDelete: Cascade)
  schedulerId String
  mission     Mission   @relation(fields: [missionId], references: [id], onDelete: Cascade)
  missionId   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())

  @@unique([schedulerId, missionId])
}
